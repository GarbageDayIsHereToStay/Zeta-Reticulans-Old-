<HediffDef>
    <defName>ZR_AGGRESSION_HEDIFF_DEF</defName>
    <label>amygdala overload</label>
    <description>Zeta Reticulans make use of coded energy to electrically induce various reactions in biological systems. 
      \nIn this case information packets have been programmed to trigger production in the amygdala and cause extreme aggression.</description>
    <labelNoun>overloaded</labelNoun>
    <hediffClass>HediffWithComps</hediffClass>
    <battleStateLabel>berserk</battleStateLabel>
    <maxSeverity>1</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_SelfHeal">
        <healAmount>0.01</healAmount>
      </li>
    </comps>
    <stages>
      <li>
        <label>extreme</label>
        <minSeverity>0.20</minSeverity>
        <mentalStateGivers>
          <li>
            <mentalState>Berserk</mentalState>
            <mtbDays>0.001</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
    </stages>
</HediffDef>
  
